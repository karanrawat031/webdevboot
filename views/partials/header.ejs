<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <title>Karan's Bootcamp</title>
  <!-- Site Properties -->
  <script   src="https://code.jquery.com/jquery-3.1.1.min.js"   integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="   crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.min.css">
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.4/semantic.js"></script>
  <style type="text/css">

    .hidden.menu {
      display: none;
    }

    .masthead.segment {
      min-height: 700px;
      padding: 1em 0em;
    }
    .masthead .logo.item img {
      margin-right: 1em;
    }
    .masthead .ui.menu .ui.button {
      margin-left: 0.5em;
    }
    .masthead h1.ui.header {
      margin-top: 3em;
      margin-bottom: 0em;
      font-size: 4em;
      font-weight: normal;
    }
    .masthead h2 {
      font-size: 1.7em;
      font-weight: normal;
    }

    .ui.vertical.stripe {
      padding: 8em 0em;
    }
    .ui.vertical.stripe h3 {
      font-size: 2em;
    }
    .ui.vertical.stripe .button + h3,
    .ui.vertical.stripe p + h3 {
      margin-top: 3em;
    }
    .ui.vertical.stripe .floated.image {
      clear: both;
    }
    .ui.vertical.stripe p {
      font-size: 1.33em;
    }
    .ui.vertical.stripe .horizontal.divider {
      margin: 3em 0em;
    }

    .quote.stripe.segment {
      padding: 0em;
    }
    .quote.stripe.segment .grid .column {
      padding-top: 5em;
      padding-bottom: 5em;
    }

    .footer.segment {
      padding: 5em 0em;
    }

    .secondary.pointing.menu .toc.item {
      display: none;
    }

    @media only screen and (max-width: 700px) {
      .ui.fixed.menu {
        display: none !important;
      }
      .secondary.pointing.menu .item,
      .secondary.pointing.menu .menu {
        display: none;
      }
      .secondary.pointing.menu .toc.item {
        display: block;
      }
      .masthead.segment {
        min-height: 350px;
      }
      .masthead h1.ui.header {
        font-size: 2em;
        margin-top: 1.5em;
      }
      .masthead h2 {
        margin-top: 0.5em;
        font-size: 1.5em;
      }
    }


  </style>

  <script src="https://code.jquery.com/jquery-3.0.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.4/semantic.js"></script>
  <script>
  $(document)
    .ready(function() {

      // fix menu when passed
      $('.masthead')
        .visibility({
          once: false,
          onBottomPassed: function() {
            $('.fixed.menu').transition('fade in');
          },
          onBottomPassedReverse: function() {
            $('.fixed.menu').transition('fade out');
          }
        })
      ;

      // create sidebar and attach to menu open
      $('.ui.sidebar')
        .sidebar('attach events', '.toc.item')
      ;

    })
  ;
  </script>
</head>
<body>

<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
  <div class="ui container">
    <a class="active item" href="/">Home</a>
    <a class="item" href="/allCourses">All Courses</a>
    <a class="item" href="/categories">Categories</a>
    <a class="item" href="/about">About</a>
    <div class="right menu">
     <% if(!currentUser){ %> 
      <div class="item">
        <a class="ui button" href='/login'>Log in</a>&nbsp;&nbsp;
        <a class="ui button" href="/register">Register</a>
      </div>
     <% } else { if(currentUser.username=='admin'){ %>
           <div class="item">
        <a class="ui button" href='/<%=currentUser.username%>/myCourses'><%= currentUser.username %></a>&nbsp;&nbsp;
        <a class="ui button" href='/admin/addCourses'>Add Courses</a>&nbsp;&nbsp;
        <a class="ui button" href="/logout">Logout</a>&nbsp;&nbsp;
      </div>
     <% }else{ %>
      <div class="item">
        <a class="ui button" href='/<%=currentUser.username%>/myCourses'><%= currentUser.username %></a>&nbsp;&nbsp;
        <a class="ui button" href="/logout">Logout</a>&nbsp;&nbsp;
      </div>    
     <% } %>
     <% } %> 
    </div>
  </div>
</div>

<!-- Sidebar Menu -->
<div class="ui vertical inverted sidebar menu">
  <a class="active item" href='/'>Home</a>
  <a class="item" href="/allCourses">All Courses</a>
  <a class="item" href="/categories">Categories</a>
  <a class="item" href="/about">About</a>
 <% if(!currentUser){ %> 
  <a class="item" href='/login'>Login</a>
  <a class="item" href="/register">Register</a>
 <% } else { if(currentUser.username=='admin'){ %>
  <a class="item" href="/<%= currentUser.username %>/myCourses"><%= currentUser.username %></a>
  <a class="item" href='/admin/addCourses'>Add Courses</a>
  <a class="item" href="/logout">Logout</a>    
 <% }else{ %>
  <a class="item" href="/<%= currentUser.username %>/myCourses"><%= currentUser.username %></a>
  <a class="item" href="/logout">Logout</a>    
 <% }%>
 <% } %>
   
</div>


<!-- Page Contents -->
<div class="pusher">
  <div class="ui inverted vertical masthead center aligned segment">

    <div class="ui container">
      <div class="ui large secondary inverted pointing menu">
        <a class="toc item">
          <i class="sidebar icon"></i>
        </a>
        <a class="active item" href="/">Home</a>
        <a class="item" href="/allCourses">All Courses</a>
        <a class="item" href="/categories">Categories</a>
        <a class="item" href='/about'>About</a>
        <div class="right item">
         <% if(!currentUser){ %> 
          <a class="ui inverted button" href="/login">Log in</a>
          <a class="ui inverted button" href="/register">Register</a>
         <% } else { if(currentUser.username=='admin'){ %>
          <a class="ui inverted button" href='/<%=currentUser.username%>/myCourses'><%= currentUser.username %></a>
          <a class="ui inverted button" href='/admin/addCourses'>Add Courses</a>
          <a class="ui inverted button" href="/logout">Logout</a>
         <% }else{ %>
          <a class="ui inverted button" href='/<%=currentUser.username%>/myCourses'><%= currentUser.username %></a>
          <a class="ui inverted button" href="/logout">Logout</a>    
         <% } %>
          
         <% } %>          
        </div>
      </div>
    </div>